mixin slider() 
    .slider
        .slider__slideshow
            -let i = 1;
            while i < 10
                a.slider__slide(class = i == 1? 'slider__slide_active' : '' href= "https://yandex.ru")
                    img(src=require(`Blocks/slider/images/${i++}.jpg`))
        .slider__arrow.slider__arrow_left arrow_back
        .slider__arrow.slider__arrow_right arrow_forward